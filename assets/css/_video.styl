#post
  .info
    col()
    background-color: lightgray
    margin: 0 0 4em 0
    a.back
      col(1/3)
      padding: 2em
      border-right: 2px solid #EEE
      text-align: center
      +below(1000px)
        col()
        text-align: center
      color: bc1
      &:hover
        color: white
        background-color:bc1

  .story, .container
    center(1000px)
    +below(900px)
      padding: 2em 1em
    p
      max-width: 700px
      margin: 2em auto
    h2
      font-size: 2.5em
      max-width: 700px
      margin: 1em auto

    p:nth-child(2)
      max-width: 1000px
    h1
      font-size: 4em
      +below(800px)
        font-size: 3em
      max-width: 1000px
    h4
      font-size: 1em
      background-color: lightgray
      padding: .75em
      margin: 0
      max-width: 200px
    h3
      font-size: 1.5em
      max-width: 700px
      margin: 1em auto

    img
      display: block
      margin: 2em auto
      border: 2px solid lightgray
      box-shadow: 1px 0px 10px lightgray

  #home.posts
    background: lightgray
    margin-top: 4em
    border-top:  2px solid whitesmoke
    img
      border: none
      box-shadow: none
      margin: 0
