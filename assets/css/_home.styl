#home
  col()
  #intro
    padding: 5%
    #blurb
      video#bgvid
        position fixed
        right 0
        bottom 0
        min-width 100%
        min-height 100%
        width auto
        height auto
        z-index -100
        background url('http://theblackcurrant.net/images/tn/canalsport.jpg') no-repeat
        background-size cover

      padding: 5em 0
      center(400px)
      text-align: center
      h1
        font-size: 2.5em
      a
        text-decoration: none
        color: white

  #whatwedo
    col()
    // bg: '../img/pink-bg.svg' bc3 repeat
    background: bc3
    text-align: center
    padding: 4em 0
    h2
      color: bc2
    .skill
      col(1/3)
      padding: 4em
      h3, p
        color: bc2
        text-decoration: none

  #ourstudios
    col()
    background: bc1
    h2
      color: bc2
      text-align: center

    .studio
      col()
      margin: 4em 0
      .photo
        col(1/2)
        +below(800px)
          col()

      .description
        color: bc2
        border:10px solid bc3
        col(1/2)
        +below(800px)
          col()
        h2, p
          padding: 2em




  #posts
    ul
      float: none
      li
        float: none
        padding: 0
        margin: 0
        a
          float: left
          font-size: 1em
          background: black
          text-decoration: none
          width: 25%
          +below(800px)
            width: 33%
          +below(700px)
            width: 50%
          +below(400px)
            width: 100%
          // height: 392px
          text-align: center
          .space
            height: 75px
            display: block
            padding: 2em
          padding-top: 2%
          &:hover
            background: bc1
            color: white
          img
            padding:10%

  #previous
    background: bc1
    padding: 6em 1em
      p
        color: white
        text-align:center
        border-bottom: 2px solid white
        padding: 1em
      .logos
        height: 200px
        a
          col(1/6)
          position: relative;
          top: 50%;
          transform: translateY(-50%)
          +below(550px)
            col()
            margin: 0 0 2em 0
            text-align: center
            top: 15%;
            transform: translateY(0%)
        img
          padding-right: 1em
          width: 150px
      +below(750px)
        padding: 2em 1em
